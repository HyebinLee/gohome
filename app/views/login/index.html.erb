	      <%= f.text_field :pwd, class: 'form-control' %>

	      <br><div style = "margin-top : 10px"><%= f.submit "Log in" %></div>
		<% end %>
		<div style = "margin-top : 15px">
		<p>New user? <%=link_to "Sign up now",join_index_path %></p>
		</div>
	</div>
</div>
</div>
