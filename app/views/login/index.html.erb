<div align = "center" style = "margin-top : 50px">
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%=form_for :login, url: login_index_path do |f| %>
			<%= f.label :아이디 %>
			<%= f.text_field :userid,class: 'form-control' %>
			<br><%= f.label :비밀번호 %>
	      <%= f.text_field :pwd, class: 'form-control' %>
	      <br><%= f.submit "Log in", class: "btn btn-primary" %>
		<% end %>
		
		<p>New user? <%=link_to "Sign up now",join_index_path %></p>
	</div>
</div>
</div>
