<%=render './form' %>
<p style="text-align:center;color:#4c4c4c">MYPAGE</p>

<% if current_user==2 %>
<p style="text-align:center">New user? <%=link_to "Sign up now",join_index_path %></p>
<p style="text-align:center">user? <%=link_to "login",login_index_path %></p>

<% elsif current_user==0 %>
<table width=100% align=center rules="rows" style="rule-color:grey">
  <tr style="border-bottom: 2px solid black">
    <td>NAME</td>
    <td>ID</td>
  </tr>

  <% @join.each do |join| %>
    <tr>
      <td><%= join.name %></td>
      <td><%= link_to join.userid, join_path(join) %></td>
    </tr>
  <% end %>
</table>
<% else %>
<br>
<table width=100% rules="rows" >
  <tr style="border:2px black solid;"></tr>
  <tr>
   <td align=center><a href=mypages/order><img src="order.png" alt="ORDER"/></a></td>
  </tr>
  <tr>
   <td align=center><a href=mypages/inform><img src="inform.JPG" alt="INFORM"/></a></td>
  </tr>
  <tr>
   <td align=center><a href=mypages/board><img src="board.JPG" alt="BOARD"/></a></td>
  </tr>
  <tr style="border:2px black solid;"></tr>
</table>
<%end%>


