<%=render './form' %>
<% if current_user==1 %>
<br><p style="font-size:10px">회원정보</p>
<br><table width=100% align=center rules="rows" style="font-size:10px;rule-color:grey">
 <tr style="with:100%;border: 2px solid grey;background-color:#cccccc">
 <td ColSpan="2"><%=username%>님의 회원정보입니다.</td>
 </tr>
 <tr style="border: 1px solid grey">
  <td>NAME</td>
  <td><%=username%></td>
 </tr>
 <tr style="border: 1px solid grey">
  <td>ID</td>
  <td><%=userid%></td>
 </tr>
 <tr style="border: 1px solid grey">
  <td>EMAIL</td>
  <td><%=useremail%></td>
 </tr>
 <tr style="border: 1px solid grey">
  <td>BIRTH</td>
  <td><%=userbirth%></td>
 </tr>
 <tr style="border: 1px solid grey">
  <td>ADDRESS</td>
  <td><%=useraddress%></td>
 </tr>
</table>
<% else %>
<br><p>회원 리스트</p>
<table width=100% align=center rules="rows" style="font-size:10px;rule-color:grey">
 <tr style="border: 2px solid grey"></tr>
 <tr style="border: 1px solid grey;background-color:#cccccc">
  <td>NAME</td>
  <td>ID</td>
  <td>EMAIL</td>
  <td>ADDRESS</td>
 </tr>

<% @join.each do |join| %>
<% if join.name!=username %>
<tr style="border: 1px solid grey">
  <td><%= join.name %></td>
  <td><%= join.userid%></td>
  <td><%= join.email%></td>
  <td><%= join.address %></td>
 </tr><% end %><% end %>
</table>

<% end %>
