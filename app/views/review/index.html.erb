<%=render './form' %>
<br>
<img src="review.png" width="100%"/>
<table width=100% align=center rules="rows" style="rule-color:grey;font-size:10px">
  <tr style="border-bottom: 2px solid black">
    <td>NO</td>
    <td>PRODUCT</td>
    <td>SUBJECT</td>
    <td>NAME</td>
    <td>DATE</td>
    <td>평점</td>
  </tr>

  <% @review.each do |review| %>
    <tr>
      <td><%= review.num %></td>
      <td><%= review.product %></td>
      <td><%= link_to review.subject, review_path(review) %></td>
      <td><%= review.name %></td>
      <td><%= review.date %></td>
      <td><%= review.star %></td>
    </tr>
  <% end %>
</table>

