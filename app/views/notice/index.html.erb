<%=render './form' %>
<br>
<img src="info.JPG" width="100%"/>
<% if current_user==0 %>
<p style="text-align:right;font-size:10px"><%=link_to '글쓰기', new_notice_path %></p>
<% else %>
<p></p>
<% end %>

<table width=100% align=center rules="rows" style="rule-color:grey;font-size:10px">
  <tr style="border-bottom: 2px solid black">
    <td>NO</td>
    <td>NAME</td>
    <td>SUBJECT</td>
    <td>DATE</td>
  </tr>

  <% @notice.each do |notice| %>
    <tr>
      <td><%= notice.num %></td>
      <td><%= notice.name %></td>
      <td><%= link_to notice.subject, notice_path(notice) %></td>
      <td><%= notice.date %></td>
    </tr>
  <% end %>
</table>
